<!DOCTYPE html>

<title>Listing</title>

{% block body %}
    <h1>Listing</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ listing.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ listing.title }}</td>
            </tr>
            <tr>
                <th>ProductionYear</th>
                <td>{{ listing.productionYear }}</td>
            </tr>
            <tr>
                <th>Mileage</th>
                <td>{{ listing.mileage }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ listing.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ listing.createdAt ? listing.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ listing.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_front_listing_index') }}">back to list</a>

    <a href="{{ path('app_front_listing_edit', {'id': listing.id}) }}">edit</a>

    {{ include('front_listing/_delete_form.html.twig') }}
{% endblock %}
