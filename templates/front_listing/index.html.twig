<!DOCTYPE html>

<title>Listing index</title>

{% block body %}
<div class="boxXL row">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>ProductionYear</th>
                <th>Mileage</th>
                <th>Price</th>
                <th>CreatedAt</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listing in listings %}
            <tr>
                <td>{{ listing.id }}</td>
                <td>{{ listing.title }}</td>
                <td>{{ listing.productionYear }}</td>
                <td>{{ listing.mileage }}</td>
                <td>{{ listing.price }}</td>
                <td>{{ listing.createdAt ? listing.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ listing.description }}</td>
                <td>
                    <a href="{{ path('app_front_listing_show', {'id': listing.id}) }}">show</a>
                    <a href="{{ path('app_front_listing_edit', {'id': listing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_front_listing_new') }}">Create new</a>
{% endblock %}
