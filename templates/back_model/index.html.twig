{% extends 'front/back.html.twig' %}

{% block body %}
<div class="boxXL row">
    <h1>Liste des Models</h1>

    <table class="table table-success table-striped table-hover">
        <thead>
            <tr>
                
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                
                <td>{{ model.name }}</td>
                <td>{{ model.description }}</td>
                <td>
                    <a href="{{ path('app_back_model_show', {'id': model.id}) }}">show</a>
                    <a href="{{ path('app_back_model_edit', {'id': model.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   
</div>    

    
{% endblock %}
