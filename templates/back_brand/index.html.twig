{% extends 'front/back.html.twig' %}



{% block body %}
 <div class="boxSM row">
    <h1>Liste des marques</h1>

    <table class="table table-success table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>
                    <a href="{{ path('app_back_brand_show', {'id': brand.id}) }}">show</a>
                    <a href="{{ path('app_back_brand_edit', {'id': brand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>    

    <a href="{{ path('app_back_brand_new') }}">Create new</a>
{% endblock %}
