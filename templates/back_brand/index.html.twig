{% extends 'front/back.html.twig' %}



{% block body %}
 <div class="boxSM row">
    <h1>Liste des marques</h1>

    <table class="table table-success table-striped table-hover">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>action</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                
                <td>{{ brand.name }}</td>
                <td>
                    <a class="btn btn-outline-success" href="{{ path('app_back_brand_show', {'id': brand.id}) }}">Voir</a>
                    
                <td>
                    
                    <a class="btn btn-outline-primary" href="{{ path('app_back_brand_edit', {'id': brand.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>    

   
{% endblock %}
